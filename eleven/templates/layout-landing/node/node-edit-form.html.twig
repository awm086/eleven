{# eleven.theme eleven_form_node_form_alter() #}

{{ attach_library('eleven/node.edit') }}
{{ attach_library('eleven/nav.tabs.icon') }}

<div>

  <div class="node-edit-main">

  <nav class="tabs-icon">
    <ul>
      <li>
        <a href="#" class="js-11-layout-chooser" data-layout="8"  data-helptext="{{ 'Layout 2 columns'|t }}">
          <span class="visually-hidden">{{ 'Layout 2 columns'|t }}</span>
        </a>
      </li>
      <li>
        <a href="#" class="js-11-layout-chooser" data-layout="10" data-helptext="{{ 'Layout Layout 2 col wide'|t }}">
          <span class="visually-hidden">{{ 'Layout 2 col wide'|t }}</span>
        </a>
    </li>
      <li>
        <a href="#" class="js-11-layout-chooser" data-layout="12" data-helptext="{{ 'Layout Full width'|t }}">
          <span class="visually-hidden">{{ 'Layout Full width'|t }}</span>
        </a>
      </li>
    </ul>
  </nav>

    {{ form|without('advanced', 'actions', 'meta') }}
  </div>

  <div class="node-edit-sidebar">


      {#
    <div class="card">
      State: {{ form.metacard.publised['#value'] }}
      <strong>{{ form.title.widget.0.value['#default_value'] }}</strong>
      <br>
      Date {{ form.metacard.changed['#value'] }}
      <br>
      Author {{ form.metacard.author['#value'] }}
      <hr>
      {% if form.sticky.widget.value['#default_value'] %}
      Sticky
      {% endif %}

      {% if form.promote.widget.value['#default_value'] %}
        promoted to frontpage
      {% endif %}

    </div>
      #}

    {{ form.advanced }}
  </div>

  <div class="nodesubmit">
    {{ form.actions }}
  </div>
</div>
